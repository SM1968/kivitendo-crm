                '<table> <tr> <td><label>Date of Birth</label></td>' +
                '<td><input type="text" name="datetime" id="datetime"></td> </tr>' +
                '<tr> <td><label>Name</label></td> <td><input type="text" name="name" id="name"></td> </tr>' +
