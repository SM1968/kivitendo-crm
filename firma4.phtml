                    }
                }

            });
        }
        if( language != 'en' ){
            $.ajax({
                url : 'jquery-plugins/elFinder/js/i18n/elfinder.' + language + '.js',
                cache : true,
                dataType : 'script'
            }).done( function(){
                start( language );
            }).fail( function(){
                start( 'en' );
            });
        }
        else start( language );


